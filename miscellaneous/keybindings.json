// Place your key bindings in this file to override the defaults
[
  //Moverse entre tabs
  {
    "key": "alt+l",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.previousEditor"
  },
  //Ir a
  // {
  //   "key": "alt+w",
  //   "command": "editor.action.goToDeclaration"
  // },
  {
    "key": "alt+w",
    "command": "editor.action.goToDeclaration"
  },
  //Seleccionar progresivamente
  {
    "key": "ctrl+w",
    "command": "editor.action.smartSelect.grow",
    "when": "editorTextFocus"
  },
  //Buscar archivos
  {
    "key": "shift shift",
    "command": "workbench.action.quickOpen"
  },
  //Moverte al arbol de directorios
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  // {
  //   "key": "alt+e",
  //   "command": "workbench.view.explorer",
  //   "when": "viewContainer.workbench.view.explorer.enabled"
  // },
  //Subir/bajar una linea
  {
    "key": "alt+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  //Comentar código
  {
    "key": "ctrl+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  //Seleccionar sugerencias
  {
    "key": "tab",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "down",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+tab",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "up",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  //Organizar imports
  {
    "key": "ctrl+alt+o",
    "command": "editor.action.organizeImports",
    "when": "editorTextFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"
  },
  //Cerrar tab
  {
    "key": "alt+q",
    "command": "workbench.action.closeActiveEditor"
  },

  //Renombrar archivo
  {
    "key": "shift+f6",
    "command": "-workbench.action.focusPreviousPart"
  },
  {
    "key": "shift+f6",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  //Duplicar linea
  {
    "key": "ctrl+d",
    "command": "-editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+d",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  //Scroll
  {
    "key": "alt+j",
    "command": "cursorPageDown",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+k",
    "command": "cursorPageUp",
    "when": "editorTextFocus"
  },
  //Moverse a inicio/fin de la linea
  {
    "key": "alt+2",
    "command": "type",
    "args": { "text": "$" },
    "when": "editorTextFocus"
  },
  {
    "key": "alt+1",
    "command": "type",
    "args": { "text": "^" },
    "when": "editorTextFocus"
  },
  //Buscar texto
  {
    "key": "alt+f",
    "command": "workbench.action.findInFiles"
  },
  //Reemplazar texto
  {
    "key": "alt+r",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus"
  },
  //Activar/desactivar terminal
  {
    "key": "F12",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  //Activar/desactivar barra lateral
  // {
  //   "key": "F11",
  //   "command": "workbench.action.toggleSidebarVisibility"
  // },
  {
    "key": "F10",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  //Seleccionar todo
  {
    "key": "alt+a",
    "command": "editor.action.selectAll",
    "when": "editorTextFocus"
  },
  //Importar librerias faltantes
  {
    "key": "alt+enter",
    "command": "editor.action.autoFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus"
  },
  //Seleccionar toda la línea actual
  {
    "key": "alt+3",
    "command": "expandLineSelection",
    "when": "editorTextFocus"
  }
]
